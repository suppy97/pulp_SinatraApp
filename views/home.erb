<h2 id="delete_message" style="color: #e44b60; text-align: center"><%= flash[:deleted] %></h2>

<div class="page-content">
	<h1 class="mb0"><%= @user['name'] %></h1>
	<div class="meta"><span>Web Designer</span>, <span>Illustrator</span>, <span>Speaker</span></div>
	<p class="text-center"></p>
	<h2></h2>

</div>


<div class="container-fluid pt70 pb70">

	<div id="fh5co-projects-feed" class="fh5co-projects-feed clearfix masonry">


		<div class="grid">
			<% @home_user.each do |home| %>
		<div class="fh5co-project masonry-brick">
			<!-- 投稿の削除-->
			<form action="/destroy/<%= home['id'] %>" method="post">
				<input type="hidden" name="_method" value="delete">
				<button type="submit" class="square_btn">
					<i class="fas fa-trash-alt"></i>
				</button>



			</form>


			<figure class="effect-zoe">
			<a href="/show/<%= home['id'] %>">
				<img src="<%= home['image_path'] %>">
			</a>
		<figcaption>
			<h2><%= home['title'] %></h2>
		</figcaption>
	</figure>

		</div>
	<% end %>


</div>
	</div>
</div>


<div class="page-content">
	<h2>Save</h2>
</div>
<div class="container-fluid pt70 pb70">

	<div id="fh5co-projects-feed" class="fh5co-projects-feed clearfix masonry">


		<div class="grid">
			<% @save.each do |save| %>
				<div class="fh5co-project masonry-brick">


					<figure class="effect-zoe">
						<a href="/show/<%= save['user_id'] %>">
							<img src="<%= save['image_path'] %>">
						</a>
						<figcaption>
							<h2><%= save['post_title'] %></h2>
							<p class="icon-links">
							</p>
						</figcaption>
					</figure>

				</div>
			<% end %>


		</div>
	</div>
</div>


